/* components/detail-song-header/index.wxss */
.header {
  width: 100vw;
  position: relative;
  left: -20rpx;
  height: 450rpx;
  display: flex;
  align-items: center;
}
.header .bg-image {
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}
.header .bg-cover {
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: rgba(0,0,0,.5);
  backdrop-filter: blur(5px);
}
.header .content .info {
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.header .content .info .cover {
  width: 220rpx;
  height: 220rpx;
  padding: 0 30rpx;
}
.operation {
  display: flex;
  justify-content: space-around;
  color: #fff;
}
.operation .operation-icon {
  width: 30rpx;
}
.info .avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.info .desc {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.info .info-detail {
  width: 400rpx;
}