/* components/song-menu-item/index.wxss */
.song-menu-item .top .image {
  width: 100%;
  border-radius: 10rpx;
}
.song-menu-item .top {
  position: relative;
}
.song-menu-item .top .play-count {
  position: absolute;
  color: #fff;
  right: 10rpx;
  bottom: 10rpx;
  background-color: rgba(0,0,0,.3);
}
.song-menu-item .menu-name {
  overflow:hidden; 
text-overflow:ellipsis;
display:-webkit-box; 
-webkit-box-orient:vertical;
-webkit-line-clamp:2; 
}